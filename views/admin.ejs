    <script>
    function removeUser(id){
      var result = confirm("사용자를 정말 삭제하시겠습니까?");
      if(result)
      {
        $.ajax({
  			  url:"/deleteUser/"+id,
  			  type:"delete",
  			  dataType:"json",
  			  success: function(result){
            location.href="../admin";
  			  },
  			  error:function(request,status,error){
  		       console.log("code:"+request.status+"\n"+"message:"+request.responseText+"\n"+"error:"+error);
  			  }
  		  });
      }
    }
