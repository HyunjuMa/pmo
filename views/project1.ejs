                </div>
              </div>
            </div> <!--panel-->
          </div> <!--group-->
        </div> <!--col(left)-->

        <div class="col-md-3">

          <h3> 프로젝트 개요 </h3>
          <p> <%= project[0].pdesc %> </p>
          <p> <%= project[0].bp[0] %> </p>

          <a href="/update/<%=project[0]._id %>"> 수정 </a> <br>
          <a href="/delete/<%=project[0]._id %>"> 삭제 </a> <br>

        </div> <!-- right division -->

