  <body>
    <% include ./navbar.ejs %>
    <!-- 기본은 게시판 형태, 산출물 업로드/다운로드가 핵심 -->
    <h1 style="font-weight:bold;"> <%= project[0].pname %> </h1> <!--h2> <%= project[0].pm %> </h2-->
      <br><br>
      <div class="container-fluid" align="right">
        <ul class="progressbar">

         <% for(var i=0; i<project[0].task.length; i++) { %>
          <li> <a href=""> <%=i+1%>. <%= project[0].task[i].tname %> </a> </li>
          <!-- if문으로 active 경우 처리해줄것-->
         <% } %>
        </ul>
    </div>

    <div class="container-fluid">
      <div class="row">

        <div class="col-md-9">
          <div class="panel-group" id="accordion">

            <% for(var i=0; i<project[0].task.length; i++) { %>

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href= "#<%=project[0].task[i]._id%>"> Task # <%= i %> : <%= project[0].task[i].tname %> </a>
                  </h4>
                </div>
                <div id="<%=project[0].task[i]._id%>" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <%= project[0].task[i]._id %>

                    태스크 이름 : <%= project[0].task[i].tname %>
                    필수 산출물 :
                  </div>
                </div>
              </div>

            <% } %>


                        <div class="panel panel-default">
                          <div class="panel-heading">
                            <h4 class="panel-title">
                              <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">Collapsible Group 4</a>
                            </h4>
                          </div>
                          <div id="collapse4" class="panel-collapse collapse">
                            <div class="panel-body">
                              이 자리에 인풋박스, 첨부파일 가능한 공
                              <input name="test" rows="5"/>
                              <a href = ""> <span class="glyphicon glyphicon-paperclip" aria-hidden="true" > </span> </a>
                            </div>
                          </div>
                        </div> <!--panel-->


            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Collapsible Group 3</a>
                </h4>
              </div>
